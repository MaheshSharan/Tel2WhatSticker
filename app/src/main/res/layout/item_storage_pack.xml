<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgTrayPreview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/colorButtonNormal"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Anime Reactions"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPackDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="120 Stickers â€¢ 45 MB"
            android:textColor="?attr/android:textColorSecondary"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnClearPackCache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="?attr/android:textColorSecondary" />

    <ImageView
        android:id="@+id/btnDeletePack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_delete"
        app:tint="?attr/android:textColorSecondary" />
</LinearLayout>