<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_bar_dark">

    <!-- Logo -->
    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_splash_logo"
        android:scaleType="fitCenter"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/splashTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="64dp" />

    <!-- App Title -->
    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel2What"
        android:textColor="@color/text_main_dark"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.01"
        app:layout_constraintBottom_toTopOf="@+id/splashSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashLogo" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/splashSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Telegram to WhatsApp Stickers"
        android:textColor="@color/text_sec_dark"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.05"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/splashVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashTitle" />

    <!-- Version & Credits -->
    <TextView
        android:id="@+id/splashVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="v1.1.2 â€¢ Crafted by Mahesh Sharan"
        android:textColor="@color/text_sec_dark"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>